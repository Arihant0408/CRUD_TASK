<% layout('boilerplate')  %> 
<h1 style="margin: auto; text-align: center;">Register</h1>

  
  <div class=" my-5 col-6 offset-3">
      <form action="/register" method="POST"  class="validate-form">
          <div class="mb-3">
              <label class="form-label" for="name">Username</label>
              <input class="form-control" type="text" id="name" name="name" required>
              <div class="valid-feedback">
                  Looks good!
                </div>
          </div>
          <div class="mb-3">
              <label class="form-label" for="title">Email</label>
              <input class="form-control" type="email" id="email" name="email" required>
              <div class="valid-feedback">
                  Looks good!
                </div>
          </div>
          <div class="mb-3">
              <label class="form-label" for="title">Password</label>
              <input class="form-control" type="password" id="password" name="password" required>
              <div class="valid-feedback">
                  Looks good!
                </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="title">Phone Number</label>
            <input class="form-control" type="tel" maxlength="10" minlength="10" id="phone" name="phone" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Hobbies</label>
          <textarea class="form-control" type="text" id="hobbies" name="hobbies" required></textarea>
          <div class="valid-feedback">
              Looks good!
            </div>
      </div>
          <button class="btn btn-primary">
              Submit
          </button>
          </form>
          </div>
